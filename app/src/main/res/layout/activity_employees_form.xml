<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ID"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/inputIdEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input empl number"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NAME"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/inputNameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input empl name"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SURNAME"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/inputSurnameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input empl surname"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DATE"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/inputStartDateEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input empl date"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="date"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DEPT"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/inputDeptEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input dept id"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/inputEmpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND"/>

</LinearLayout>