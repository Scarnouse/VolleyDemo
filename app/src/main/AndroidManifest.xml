<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.vcarmen.volleydemo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.departments.DepartmentsActivity"/>
        <activity android:name=".controllers.departments.DepartmentsRead"/>
        <activity android:name=".controllers.departments.DepartmentsCreate"/>
        <activity android:name=".controllers.departments.DepartmentModify"/>
        <activity android:name=".controllers.Employees.EmployeesFromDepartment"/>
        <activity android:name=".controllers.Employees.EmployeeActivity"/>
        <activity android:name=".controllers.Employees.EmployeesRead"/>
        <activity android:name=".controllers.Employees.EmployeesCreate"/>
        <activity android:name=".controllers.Employees.EmployeeModify"/>
        <activity android:name=".controllers.Projects.ProjectsActivity"/>
        <activity android:name=".controllers.Projects.ProjectsRead"/>
        <activity android:name=".controllers.Projects.ProjectCreate"/>
        <activity android:name=".controllers.Projects.ProjectModify"/>
        <activity android:name=".controllers.Employees.EmployeesFromProject"/>
        <activity android:name=".controllers.Employees.EmployeesToProject"/>
        <activity android:name=".controllers.Employees.EmployeesFromProjectModify"/>
    </application>

</manifest>