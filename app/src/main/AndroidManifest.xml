<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.vcarmen.volleydemo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.DepartmentsActivity"/>
        <activity android:name=".controllers.DepartmentsRead"/>
        <activity android:name=".controllers.DepartmentsCreate"/>
        <activity android:name=".controllers.DepartmentModify"/>
        <activity android:name=".controllers.EmployeesFromDepartment"/>
        <activity android:name=".controllers.EmployeeActivity"/>
    </application>

</manifest>